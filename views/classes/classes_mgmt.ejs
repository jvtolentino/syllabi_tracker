<% include ../partials/header %>

<script src='/js/classes_crud.js'></script>

<div class='container'>
	<br>

	<ol class="breadcrumb">
		<li><a href="/syllabi_tracker">Home</a></li>
		<li class="active">Classes Management</li>
	</ol>

	<div class='page-header'>
		<h3>Classes Management</h3>
	</div>

	<a class='btn btn-primary btn-lg' href='/classes/mgmt/new'>Create a New Class</a>

	<br><br>

	<table class="table table-striped table-bordered table-hover">
		<tr>
			<th colspan="7">List of Classes</th>	
		</tr>

		<tr>
			<th>School Year</th>
			<th>Semester</th>
			<th>Course</th>
			<th>Section</th>
			<th>Room</th>
			<th>Schedule</th>
			<th>Actions</th>
		</tr>

		<% classes.forEach((c) => { %>		
			<tr>
				<td><%= c.sy %></td>
				<td><%= c.sem %></td>
				<td><%= c.course.description %></td>
				<td><%= c.section %></td>
				<td><%= c.room %></td>
				<td><%= c.schedule %></td>
				<td>
					<button type='submit' name='submit_button' class='classDelete btn btn-danger btn-sm' data-id='<%= c._id %>'>Delete</button>
				</td>
			</tr>
		<% }) %>

	</table>

	<div class='page-footer'>
			<p>*** A bug is still being identified when hitting the delete button. Refresh the page after deleting an item to update the page.</p>
	</div>

</div>

<% include ../partials/footer %>