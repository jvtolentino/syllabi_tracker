<% include ../partials/header %>

<script src='/js/course_crud.js'></script>

<div class='container'>	
	<br>
	
	<ol class="breadcrumb">
		<li><a href="/syllabi_tracker">Home</a></li>
		<li class="active">Courses Management</li>
	</ol>

	<div class='page-header'>
		<h3>Courses Management</h3>
	</div>

	<a class='btn btn-primary btn-lg' href='/courses/mgmt/new'>Create a New Course</a>
	
	<br><br>

	<table class="table table-striped table-bordered table-hover">
		<tr>
			<th colspan="4">List of Courses</th>	
		</tr>

		<tr>
			<th>Code</th>
			<th>Description</th>
			<th>Units</th>
			<th>Actions</th>
		</tr>

		<% courses.forEach((course) => { %>		
			<tr>
				<td><%= course.code %></td>
				<td><%= course.description %></td>
				<td><%= course.units %> units</td>
				<td>
					<button type='submit' name='submit_button' class='courseDelete btn btn-danger btn-sm' data-id='<%= course._id %>'>Delete</button>

					<a href='/courses/mgmt/syllabus/<%= course._id %>' class='btn btn-primary btn-sm'>Syllabus</a>
				</td>
			</tr>
		<% }) %>
	</table>

	<div class='page-footer'>
			<p>*** A bug is still being identified when hitting the delete button. Refresh the page after deleting an item to update the page.</p>
	</div>

</div>

<% include ../partials/footer %>