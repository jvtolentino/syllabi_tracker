<% include ../partials/header %>

<form method='POST' action='/courses/mgmt/create'>
	<div class="container">
		<br>

		<ol class="breadcrumb">
			<li><a href="/syllabi_tracker">Home</a></li>
			<li><a href='/courses/mgmt'>Courses Management</a></li>
			<li class="active">New Course</li>
		</ol>

		<div class='page-header'>
			<h3>Create New Course</h3>
		</div>

		<div class='form-group'>
			<div class='input-group'>
				<span class="input-group-addon">Course Code</span>
				<input type="text" class="form-control" name="code">
			</div>

			<br>

			<div class='input-group'>
				<span class="input-group-addon">Course Description</span>
				<input type="text" class="form-control" name="description">
			</div>

			<br>

			<div class='input-group'>
				<span class="input-group-addon">Course Units</span>
				<input type="text" class="form-control" name="units">
			</div>

			<br>

			<div class='input-group'>
				<span class="input-group-addon">Contact Hours</span>
				<input type="number" class="form-control" name="contact_hours" placeholder="e.g. 54">
			</div>

			<br>
			<button type='submit' class='btn btn-primary btn-lg'>Submit</button>
		</div>
	</div>

</form>

<% include ../partials/footer %>