<% include partials/header %>

<script src='/js/course_crud.js'></script>

<div class='container'>

	<div class='page-header'>
		<h3>Course Syllabus</h3>
	</div>

	<ol class="breadcrumb">
		<li><a href="/syllabi_tracker">Home</a></li>
		<li><a href='/syllabi_tracker/mgmt'>Syllabi Management</a></li>
		<li class="active">Course Syllabus</li>
	</ol>

	<a class='btn btn-primary btn-lg' href='/syllabi_tracker/mgmt/course/new_topic/<%= course._id %>'>Create a New Topic</a>

	<br><br>

	<table class="table table-striped table-bordered table-hover">
		<tr>	
			<th colspan='8'><%= course.code %> | <%= course.description %></th>	
		</tr>

		<tr>
			<th>#</th>
			<th>Learning Outcomes</th>
			<th>Topics</th>
			<th>Number of Hours</th>
			<th>Learning Activities</th>
			<th>Resources</th>
			<th>Assessment</th>
			<th>Actions</th>
		</tr>

		<% topics.forEach((topic) => { %>
		<tr>
			<td><%= topic.order_number %></td>
			<td><%= topic.learning_outcomes %></td>
			<td><%= topic.topic %></td>
			<td><%= topic.no_of_hours %></td>
			<td><%= topic.learning_activities %></td>
			<td><%= topic.resources %></td>
			<td><%= topic.assessment %></td>
			<td>
				<button type='submit' name='submit_button' class='topicDelete btn btn-danger btn-sm' data-topic_id='<%= topic._id %>' data-course_id='<%= course._id %>'>Delete</button>
			</td>
		</tr>

		<% }) %>


	</table>
</div>

<% include partials/footer %>